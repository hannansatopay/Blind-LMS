<?xml version='1.0' encoding='utf-8'?>
<widget id="com.blind.lms" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Blind LMS</name>
    <description>
        Blind LMS
    </description>
    <author email="ektamishra335@gmail.com">
        Shweta Mishra || Hannan Satopay
    </author>
	<preference name="phonegap-version" value="cli-9.0.0" />
	<preference name="android-minSdkVersion"      value="19" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist"/>
    <plugin name="cordova-plugin-camera"              source="npm" />
    <plugin name="cordova-plugin-media-capture"       source="npm" />
    <plugin name="cordova-plugin-vibration"           source="npm" />
	<plugin name="cordova-plugin-speechrecognition"   source="npm" />
    <plugin name="cordova-plugin-media"       source="npm" />
	<plugin spec="https://github.com/hannansatopay/cordova-plugin-tts.git"   source="git" />
	<platform name="android">
     <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
	<plugin name="phonegap-plugin-push" source="npm">
		<param name="SENDER_ID" value="782911150306" />
	</plugin>
    <platform name="android">
      <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
          <application android:usesCleartextTraffic="true" />
      </edit-config>
    </platform>
    <feature name="Notification">
    <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
	</feature>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
